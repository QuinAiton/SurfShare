<h1>this is the edit page</h1>
<%- include ("../partials/header") %>
<div class="container">
  <br />
  <form
    id="Add-Item"
    class="ui form"
    action="/gallery/<%= item._id %>/?_method=PUT"
    method="POST"
  >
    <h1>Tell Us What You Got</h1>
    <div class="field">
      <label>Title</label>
      <input type="text" name="Item[title]" value="item.title" />
    </div>
    <div class="field">
      <label>Image</label>
      <input type="text" name="Item[image]" value="item.image" />
    </div>
    <div class="field">
      <label>Price</label>
      <input type="text" name="Item[Price]" value="item.price" />
    </div>
    <div class="field">
      <label>Description</label>
      <textarea
        type="text"
        name="Item[description]"
        value="item.description"
      ></textarea>
    </div>
    <button class="ui button" type="submit">Submit</button>
  </form>
</div>
<%- include ("../partials/footer") %>
